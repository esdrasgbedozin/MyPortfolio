---
import Layout from '../../../layouts/Layout.astro';
import ProjectCard from '../../../components/ProjectCard';
---

<Layout title="My Projects - Portfolio" lang="en">
  <div class="container mx-auto px-4 py-16">
    <div class="text-center mb-12">
      <h1 class="text-4xl md:text-5xl font-bold mb-4">My Projects</h1>
      <p class="text-lg text-[var(--color-neutral-400)] max-w-2xl mx-auto">
        Discover my technical achievements: web applications, cloud architectures, and innovative
        solutions built with passion.
      </p>
    </div>

    {/* Responsive grid 1/2/3 columns */}
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
      {/* Example project 1 */}
      <ProjectCard
        client:visible
        title="Professional Portfolio"
        description="Modern portfolio built with Astro, React and TailwindCSS. Jamstack architecture with Edge Functions for contact form."
        technologies={['Astro', 'React', 'TypeScript', 'TailwindCSS']}
        period="2024"
        status="development"
        repositoryUrl="https://github.com/esdrasgbedozin/MyPortfolio"
      />

      {/* Example project 2 */}
      <ProjectCard
        client:visible
        title="E-Commerce Platform"
        description="Full-stack e-commerce platform with cart management, secure payments and admin dashboard."
        technologies={['Next.js', 'Node.js', 'PostgreSQL', 'Stripe']}
        period="2023"
        status="production"
        demoUrl="https://demo.example.com"
      />

      {/* Example project 3 */}
      <ProjectCard
        client:visible
        title="RESTful API"
        description="Scalable REST API with JWT authentication, rate limiting and OpenAPI documentation."
        technologies={['Node.js', 'Express', 'MongoDB', 'Redis']}
        period="2023"
        status="archived"
      />
    </div>

    {/* Content Collections note */}
    <div class="mt-12 text-center text-sm text-[var(--color-neutral-500)]">
      <p>Note: Real projects will be loaded via Content Collections (Phase 4)</p>
    </div>
  </div>
</Layout>
