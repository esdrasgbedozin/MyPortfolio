---
// Phase 1-4: Visual enhancements (parallax, scroll reveal, glassmorphism)
import Layout from '../../../layouts/Layout.astro';
import SkillBadge from '../../../components/SkillBadge';
import ScrollReveal from '../../../components/ScrollReveal';
import ParallaxBackground from '../../../components/ParallaxBackground';
---

<Layout
  title="My Skills - Portfolio"
  description="Esdras GBEDOZIN's technical skills: Cloud, DevOps, Backend, Frontend, AI and over 70 technologies mastered."
  lang="en"
>
  <ParallaxBackground variant="grid" speed={0.3} className="min-h-screen" client:load>
    <div class="container mx-auto px-4 py-16">
      <ScrollReveal delay={0} client:load>
        <div class="text-center mb-12">
          <h1
            class="text-4xl md:text-5xl font-bold mb-4 bg-gradient-to-r from-primary-400 via-purple-400 to-primary-400 gradient-text bg-[length:200%_100%] animate-[gradientText_3s_ease-in-out_infinite]"
          >
            Skills
          </h1>
          <p class="text-lg text-neutral-300 max-w-2xl mx-auto">
            Technologies, frameworks and methodologies I master to design and build innovative
            technical solutions.
          </p>
        </div>
      </ScrollReveal>

      {/* Skills categories */}
      <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
        {/* Languages */}
        <ScrollReveal delay={100} client:load>
          <div class="glass-effect rounded-xl p-8">
            <h2
              class="text-2xl font-bold mb-6 bg-gradient-to-r from-primary-400 to-purple-400 gradient-text"
            >
              Programming Languages
            </h2>
            <div class="flex flex-wrap gap-3">
              <SkillBadge variant="primary">TypeScript</SkillBadge>
              <SkillBadge variant="primary">JavaScript</SkillBadge>
              <SkillBadge variant="primary">Python</SkillBadge>
              <SkillBadge variant="primary">Java</SkillBadge>
              <SkillBadge variant="secondary">C#</SkillBadge>
              <SkillBadge variant="secondary">SQL</SkillBadge>
            </div>
          </div>
        </ScrollReveal>

        {/* Frameworks */}
        <ScrollReveal delay={200} client:load>
          <div class="glass-effect rounded-xl p-8">
            <h2
              class="text-2xl font-bold mb-6 bg-gradient-to-r from-primary-400 to-purple-400 gradient-text"
            >
              Frameworks & Libraries
            </h2>
            <div class="flex flex-wrap gap-3">
              <SkillBadge variant="primary">React</SkillBadge>
              <SkillBadge variant="primary">Astro</SkillBadge>
              <SkillBadge variant="primary">Next.js</SkillBadge>
              <SkillBadge variant="primary">Node.js</SkillBadge>
              <SkillBadge variant="secondary">Express</SkillBadge>
              <SkillBadge variant="secondary">Spring Boot</SkillBadge>
            </div>
          </div>
        </ScrollReveal>

        {/* Cloud & DevOps */}
        <ScrollReveal delay={300} client:load>
          <div class="glass-effect rounded-xl p-8">
            <h2
              class="text-2xl font-bold mb-6 bg-gradient-to-r from-primary-400 to-purple-400 gradient-text"
            >
              Cloud & DevOps
            </h2>
            <div class="flex flex-wrap gap-3">
              <SkillBadge variant="primary">Azure</SkillBadge>
              <SkillBadge variant="primary">AWS</SkillBadge>
              <SkillBadge variant="primary">Vercel</SkillBadge>
              <SkillBadge variant="secondary">Docker</SkillBadge>
              <SkillBadge variant="secondary">Kubernetes</SkillBadge>
              <SkillBadge variant="secondary">GitHub Actions</SkillBadge>
            </div>
          </div>
        </ScrollReveal>

        {/* Databases */}
        <ScrollReveal delay={400} client:load>
          <div class="glass-effect rounded-xl p-8">
            <h2
              class="text-2xl font-bold mb-6 bg-gradient-to-r from-primary-400 to-purple-400 gradient-text"
            >
              Databases
            </h2>
            <div class="flex flex-wrap gap-3">
              <SkillBadge variant="primary">PostgreSQL</SkillBadge>
              <SkillBadge variant="primary">MongoDB</SkillBadge>
              <SkillBadge variant="secondary">Redis</SkillBadge>
              <SkillBadge variant="secondary">SQL Server</SkillBadge>
            </div>
          </div>
        </ScrollReveal>

        {/* Methodologies - Full width */}
        <ScrollReveal delay={500} client:load>
          <div class="glass-effect rounded-xl p-8 md:col-span-2">
            <h2
              class="text-2xl font-bold mb-6 bg-gradient-to-r from-primary-400 to-purple-400 gradient-text"
            >
              Methodologies & Practices
            </h2>
            <div class="flex flex-wrap gap-3">
              <SkillBadge variant="success">TDD</SkillBadge>
              <SkillBadge variant="success">Agile / Scrum</SkillBadge>
              <SkillBadge variant="success">CI/CD</SkillBadge>
              <SkillBadge variant="success">SOLID Principles</SkillBadge>
              <SkillBadge variant="secondary">Design Patterns</SkillBadge>
              <SkillBadge variant="secondary">Clean Architecture</SkillBadge>
            </div>
          </div>
        </ScrollReveal>
      </div>

      {/* Content Collections note */}
      <div class="mt-12 text-center text-sm text-neutral-500">
        <p>Note: Real skills will be loaded via Content Collections (Phase 4)</p>
      </div>
    </div>
  </ParallaxBackground>
</Layout>
