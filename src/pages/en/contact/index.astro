---
// Phase 1-4: Visual enhancements (parallax, scroll reveal, glassmorphism)
export const prerender = true;

import Layout from '../../../layouts/Layout.astro';
import { ContactForm } from '../../../components/ContactForm';
import ScrollReveal from '../../../components/ScrollReveal';
import ParallaxBackground from '../../../components/ParallaxBackground';
---

<Layout
  title="Contact Me - Portfolio"
  description="Contact Esdras GBEDOZIN for a project, opportunity or technical collaboration."
  lang="en"
>
  <div class="relative">
    <div class="floating-orbs" aria-hidden="true">
      <div class="orb orb-1"></div>
      <div class="orb orb-2"></div>
      <div class="orb orb-3"></div>
    </div>
    <ParallaxBackground variant="gradient" speed={0.3} className="min-h-screen" client:load>
      <div class="container mx-auto px-4 py-16 max-w-2xl">
        <ScrollReveal delay={0} client:load>
          <div class="text-center mb-12">
            <h1
              class="text-4xl md:text-5xl font-bold mb-4 bg-gradient-to-r from-primary-400 via-purple-400 to-primary-400 gradient-text bg-[length:200%_100%] animate-[gradientText_3s_ease-in-out_infinite]"
            >
              Contact Me
            </h1>
            <p class="text-lg text-neutral-300">
              Have a project, an opportunity, or a question? Feel free to reach out, I'll get back
              to you as soon as possible.
            </p>
          </div>
        </ScrollReveal>

        {/* React form with validation - Epic 6.2 FE-080 */}
        <ScrollReveal delay={200} client:load>
          <div class="glass-effect card-elevated rounded-xl p-4 sm:p-6 md:p-8">
            <ContactForm locale="en" client:load />
          </div>
        </ScrollReveal>
      </div>
    </ParallaxBackground>
  </div>
</Layout>
