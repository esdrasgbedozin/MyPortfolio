---
/**
 * Page Projets FR
 * Epic 4.3 - FE-062: Intégrer getCollection dans page projets
 */
import { getCollection } from 'astro:content';
import Layout from '../../../layouts/Layout.astro';
import ProjectCard from '../../../components/ProjectCard';

// Récupérer les projets FR depuis Content Collections
const allProjects = await getCollection('projects', ({ id }) => {
  return id.endsWith('.fr.mdx');
});

// Trier par date de début (plus récent en premier)
const projects = allProjects.sort((a, b) => {
  return b.data.startDate.getTime() - a.data.startDate.getTime();
});
---

<Layout title="Mes Projets - Portfolio" lang="fr">
  <div class="container mx-auto px-4 py-16">
    <div class="text-center mb-12">
      <h1 class="text-4xl md:text-5xl font-bold mb-4">Mes Projets</h1>
      <p class="text-lg text-[var(--color-neutral-400)] max-w-2xl mx-auto">
        Découvrez mes réalisations techniques : applications web, architectures cloud, et solutions
        innovantes développées avec passion.
      </p>
    </div>

    {/* Grid responsive 1/2/3 colonnes */}
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
      {
        projects.map((project) => {
          // Format period (startDate - endDate or "en cours")
          const startYear = project.data.startDate.getFullYear();
          const endYear = project.data.endDate ? project.data.endDate.getFullYear() : null;
          const period =
            endYear && endYear !== startYear ? `${startYear} - ${endYear}` : `${startYear}`;

          // Map status to French
          const statusMap = {
            completed: 'production' as const,
            'in-progress': 'development' as const,
            planned: 'development' as const,
          };

          return (
            <ProjectCard
              client:visible
              title={project.data.title}
              description={project.data.description}
              technologies={project.data.technologies}
              period={period}
              status={statusMap[project.data.status]}
              repositoryUrl={project.data.githubUrl}
              demoUrl={project.data.liveUrl}
            />
          );
        })
      }
    </div>

    {/* Note Content Collections */}
    <div class="mt-12 text-center text-sm text-[var(--color-neutral-500)]">
      <p>Note : Les projets réels seront chargés via Content Collections (Phase 4)</p>
    </div>
  </div>
</Layout>
