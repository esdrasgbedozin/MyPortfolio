---
import Layout from '../../layouts/Layout.astro';
---

<Layout title="Portfolio Professionnel - Accueil">
  <div class="flex items-center justify-center min-h-screen">
    <div class="text-center">
      <h1 class="text-5xl font-bold mb-4">Portfolio Professionnel</h1>
      <p class="text-xl text-[var(--color-neutral-400)] mb-8">
        Bienvenue sur mon portfolio - Version Fran√ßaise
      </p>
      <div class="flex gap-4 justify-center">
        <a
          href="/fr/projets"
          class="px-6 py-3 bg-[var(--color-primary-500)] text-white rounded-lg hover:bg-[var(--color-primary-600)] transition-colors"
        >
          Voir mes projets
        </a>
        <a
          href="/fr/contact"
          class="px-6 py-3 border border-[var(--color-primary-500)] text-[var(--color-primary-500)] rounded-lg hover:bg-[var(--color-primary-500)] hover:text-white transition-colors"
        >
          Me contacter
        </a>
      </div>
    </div>
  </div>
</Layout>
