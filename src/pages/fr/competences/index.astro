---
import Layout from '../../../layouts/Layout.astro';
import SkillBadge from '../../../components/SkillBadge';
import ScrollReveal from '../../../components/ScrollReveal';
import ParallaxBackground from '../../../components/ParallaxBackground';
import { Code2, Server, Cloud, Database, BookOpen } from 'lucide-react';
---

<Layout title="Mes Compétences - Portfolio" lang="fr">
  <ParallaxBackground speed={0.3} variant="grid" className="py-20" client:idle>
    <div class="container mx-auto px-4">
      <ScrollReveal delay={0} client:idle>
        <div class="text-center mb-16">
          <h1
            class="text-5xl md:text-6xl font-bold mb-6 bg-gradient-to-r from-primary-400 via-purple-500 to-primary-400 bg-clip-text text-transparent bg-[length:200%_100%] animate-gradient-text"
          >
            Compétences
          </h1>
          <p class="text-xl text-neutral-400 max-w-3xl mx-auto leading-relaxed">
            Technologies, frameworks et méthodologies que je maîtrise pour concevoir et développer
            des solutions techniques innovantes.
          </p>
        </div>
      </ScrollReveal>

      {/* Catégories de compétences */}
      <div class="space-y-12">
        {/* Langages */}
        <ScrollReveal delay={100} client:idle>
          <div class="glass-effect rounded-xl p-8">
            <h2
              class="text-2xl font-bold mb-6 flex items-center gap-2 bg-gradient-to-r from-primary-400 to-purple-500 bg-clip-text text-transparent"
            >
              <Code2 className="text-primary-400" size={28} />
              Langages de programmation
            </h2>
            <div class="flex flex-wrap gap-3">
              <SkillBadge variant="primary" icon={Code2} client:load>TypeScript</SkillBadge>
              <SkillBadge variant="primary" icon={Code2} client:load>JavaScript</SkillBadge>
              <SkillBadge variant="primary" icon={Code2} client:load>Python</SkillBadge>
              <SkillBadge variant="primary" icon={Code2} client:load>Java</SkillBadge>
              <SkillBadge variant="secondary" icon={Code2} client:load>C#</SkillBadge>
              <SkillBadge variant="secondary" icon={Database} client:load>SQL</SkillBadge>
            </div>
          </div>
        </ScrollReveal>

        {/* Frameworks */}
        <ScrollReveal delay={200} client:idle>
          <div class="glass-effect rounded-xl p-8">
            <h2
              class="text-2xl font-bold mb-6 flex items-center gap-2 bg-gradient-to-r from-primary-400 to-purple-500 bg-clip-text text-transparent"
            >
              <Server className="text-primary-400" size={28} />
              Frameworks & Bibliothèques
            </h2>
            <div class="flex flex-wrap gap-3">
              <SkillBadge variant="primary" icon={Server} client:load>React</SkillBadge>
              <SkillBadge variant="primary" icon={Server} client:load>Astro</SkillBadge>
              <SkillBadge variant="primary" icon={Server} client:load>Next.js</SkillBadge>
              <SkillBadge variant="primary" icon={Server} client:load>Node.js</SkillBadge>
              <SkillBadge variant="secondary" icon={Server} client:load>Express</SkillBadge>
              <SkillBadge variant="secondary" icon={Server} client:load>Spring Boot</SkillBadge>
            </div>
          </div>
        </ScrollReveal>

        {/* Cloud & DevOps */}
        <ScrollReveal delay={300} client:idle>
          <div class="glass-effect rounded-xl p-8">
            <h2
              class="text-2xl font-bold mb-6 flex items-center gap-2 bg-gradient-to-r from-primary-400 to-purple-500 bg-clip-text text-transparent"
            >
              <Cloud className="text-primary-400" size={28} />
              Cloud & DevOps
            </h2>
            <div class="flex flex-wrap gap-3">
              <SkillBadge variant="primary" icon={Cloud} client:load>Azure</SkillBadge>
              <SkillBadge variant="primary" icon={Cloud} client:load>AWS</SkillBadge>
              <SkillBadge variant="primary" icon={Cloud} client:load>Vercel</SkillBadge>
              <SkillBadge variant="secondary" icon={Server} client:load>Docker</SkillBadge>
              <SkillBadge variant="secondary" icon={Server} client:load>Kubernetes</SkillBadge>
              <SkillBadge variant="secondary" icon={Server} client:load>GitHub Actions</SkillBadge>
            </div>
          </div>
        </ScrollReveal>

        {/* Bases de données */}
        <ScrollReveal delay={400} client:idle>
          <div class="glass-effect rounded-xl p-8">
            <h2
              class="text-2xl font-bold mb-6 flex items-center gap-2 bg-gradient-to-r from-primary-400 to-purple-500 bg-clip-text text-transparent"
            >
              <Database className="text-primary-400" size={28} />
              Bases de données
            </h2>
            <div class="flex flex-wrap gap-3">
              <SkillBadge variant="primary" icon={Database} client:load>PostgreSQL</SkillBadge>
              <SkillBadge variant="primary" icon={Database} client:load>MongoDB</SkillBadge>
              <SkillBadge variant="secondary" icon={Database} client:load>Redis</SkillBadge>
              <SkillBadge variant="secondary" icon={Database} client:load>SQL Server</SkillBadge>
            </div>
          </div>
        </ScrollReveal>

        {/* Méthodologies */}
        <ScrollReveal delay={500} client:idle>
          <div class="glass-effect rounded-xl p-8">
            <h2
              class="text-2xl font-bold mb-6 flex items-center gap-2 bg-gradient-to-r from-primary-400 to-purple-500 bg-clip-text text-transparent"
            >
              <BookOpen className="text-primary-400" size={28} />
              Méthodologies & Pratiques
            </h2>
            <div class="flex flex-wrap gap-3">
              <SkillBadge variant="success" icon={BookOpen} client:load>TDD</SkillBadge>
              <SkillBadge variant="success" icon={BookOpen} client:load>Agile / Scrum</SkillBadge>
              <SkillBadge variant="success" icon={BookOpen} client:load>CI/CD</SkillBadge>
              <SkillBadge variant="success" icon={BookOpen} client:load>SOLID Principles</SkillBadge
              >
              <SkillBadge variant="secondary" icon={BookOpen} client:load
                >Design Patterns</SkillBadge
              >
              <SkillBadge variant="secondary" icon={BookOpen} client:load
                >Clean Architecture</SkillBadge
              >
            </div>
          </div>
        </ScrollReveal>
      </div>
    </div>
  </ParallaxBackground>
</Layout>
