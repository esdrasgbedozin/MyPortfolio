---
import Layout from '../../../layouts/Layout.astro';
import SkillBadge from '../../../components/SkillBadge';
import ScrollReveal from '../../../components/ScrollReveal';
import ParallaxBackground from '../../../components/ParallaxBackground';
---

<Layout title="Mes Compétences - Portfolio" lang="fr">
  <ParallaxBackground speed={0.3} variant="grid" className="py-20" client:idle>
    <div class="container mx-auto px-4">
      <ScrollReveal delay={0} client:idle>
        <div class="text-center mb-16">
          <h1
            class="text-5xl md:text-6xl font-bold mb-6 bg-gradient-to-r from-primary-400 via-purple-500 to-primary-400 bg-clip-text text-transparent bg-[length:200%_100%] animate-gradient-text"
          >
            Compétences
          </h1>
          <p class="text-xl text-neutral-400 max-w-3xl mx-auto leading-relaxed">
            Technologies, frameworks et méthodologies que je maîtrise pour concevoir et développer
            des solutions techniques innovantes.
          </p>
        </div>
      </ScrollReveal>

      {/* Catégories de compétences */}
      <div class="space-y-12">
        {/* Langages */}
        <ScrollReveal delay={100} client:idle>
          <div class="glass-effect rounded-xl p-8">
            <h2
              class="text-2xl font-bold mb-6 bg-gradient-to-r from-primary-400 to-purple-500 bg-clip-text text-transparent"
            >
              Langages de programmation
            </h2>
            <div class="flex flex-wrap gap-3">
              <SkillBadge variant="primary">TypeScript</SkillBadge>
              <SkillBadge variant="primary">JavaScript</SkillBadge>
              <SkillBadge variant="primary">Python</SkillBadge>
              <SkillBadge variant="primary">Java</SkillBadge>
              <SkillBadge variant="secondary">C#</SkillBadge>
              <SkillBadge variant="secondary">SQL</SkillBadge>
            </div>
          </div>
        </ScrollReveal>

        {/* Frameworks */}
        <ScrollReveal delay={200} client:idle>
          <div class="glass-effect rounded-xl p-8">
            <h2
              class="text-2xl font-bold mb-6 bg-gradient-to-r from-primary-400 to-purple-500 bg-clip-text text-transparent"
            >
              Frameworks & Bibliothèques
            </h2>
            <div class="flex flex-wrap gap-3">
              <SkillBadge variant="primary">React</SkillBadge>
              <SkillBadge variant="primary">Astro</SkillBadge>
              <SkillBadge variant="primary">Next.js</SkillBadge>
              <SkillBadge variant="primary">Node.js</SkillBadge>
              <SkillBadge variant="secondary">Express</SkillBadge>
              <SkillBadge variant="secondary">Spring Boot</SkillBadge>
            </div>
          </div>
        </ScrollReveal>

        {/* Cloud & DevOps */}
        <ScrollReveal delay={300} client:idle>
          <div class="glass-effect rounded-xl p-8">
            <h2
              class="text-2xl font-bold mb-6 bg-gradient-to-r from-primary-400 to-purple-500 bg-clip-text text-transparent"
            >
              Cloud & DevOps
            </h2>
            <div class="flex flex-wrap gap-3">
              <SkillBadge variant="primary">Azure</SkillBadge>
              <SkillBadge variant="primary">AWS</SkillBadge>
              <SkillBadge variant="primary">Vercel</SkillBadge>
              <SkillBadge variant="secondary">Docker</SkillBadge>
              <SkillBadge variant="secondary">Kubernetes</SkillBadge>
              <SkillBadge variant="secondary">GitHub Actions</SkillBadge>
            </div>
          </div>
        </ScrollReveal>

        {/* Bases de données */}
        <ScrollReveal delay={400} client:idle>
          <div class="glass-effect rounded-xl p-8">
            <h2
              class="text-2xl font-bold mb-6 bg-gradient-to-r from-primary-400 to-purple-500 bg-clip-text text-transparent"
            >
              Bases de données
            </h2>
            <div class="flex flex-wrap gap-3">
              <SkillBadge variant="primary">PostgreSQL</SkillBadge>
              <SkillBadge variant="primary">MongoDB</SkillBadge>
              <SkillBadge variant="secondary">Redis</SkillBadge>
              <SkillBadge variant="secondary">SQL Server</SkillBadge>
            </div>
          </div>
        </ScrollReveal>

        {/* Méthodologies */}
        <ScrollReveal delay={500} client:idle>
          <div class="glass-effect rounded-xl p-8">
            <h2
              class="text-2xl font-bold mb-6 bg-gradient-to-r from-primary-400 to-purple-500 bg-clip-text text-transparent"
            >
              Méthodologies & Pratiques
            </h2>
            <div class="flex flex-wrap gap-3">
              <SkillBadge variant="success">TDD</SkillBadge>
              <SkillBadge variant="success">Agile / Scrum</SkillBadge>
              <SkillBadge variant="success">CI/CD</SkillBadge>
              <SkillBadge variant="success">SOLID Principles</SkillBadge>
              <SkillBadge variant="secondary">Design Patterns</SkillBadge>
              <SkillBadge variant="secondary">Clean Architecture</SkillBadge>
            </div>
          </div>
        </ScrollReveal>
      </div>
    </div>
  </ParallaxBackground>
</Layout>
