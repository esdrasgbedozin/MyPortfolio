---
import Layout from '../../../layouts/Layout.astro';
import Badge from '../../../components/Badge';
import ScrollReveal from '../../../components/ScrollReveal';
import ParallaxBackground from '../../../components/ParallaxBackground';
---

<Layout title="Mes Compétences - Portfolio" lang="fr">
  <ParallaxBackground speed={0.3} variant="grid" className="py-20" client:idle>
    <div class="container mx-auto px-4">
      <ScrollReveal delay={0} client:idle>
        <div class="text-center mb-16">
          <h1
            class="text-5xl md:text-6xl font-bold mb-6 bg-gradient-to-r from-primary-400 via-purple-500 to-primary-400 bg-clip-text text-transparent bg-[length:200%_100%] animate-gradient-text"
          >
            Compétences
          </h1>
          <p class="text-xl text-neutral-400 max-w-3xl mx-auto leading-relaxed">
            Technologies, frameworks et méthodologies que je maîtrise pour concevoir et développer
            des solutions techniques innovantes.
          </p>
        </div>
      </ScrollReveal>

      {/* Catégories de compétences */}
      <div class="space-y-12">
        {/* Langages */}
        <ScrollReveal delay={100} client:idle>
          <div class="glass-effect rounded-xl p-8">
            <h2
              class="text-2xl font-bold mb-6 bg-gradient-to-r from-primary-400 to-purple-500 bg-clip-text text-transparent"
            >
              Langages de programmation
            </h2>
            <div class="flex flex-wrap gap-3">
              <Badge variant="info" client:load>TypeScript</Badge>
              <Badge variant="info" client:load>JavaScript</Badge>
              <Badge variant="info" client:load>Python</Badge>
              <Badge variant="info" client:load>Java</Badge>
              <Badge variant="default" client:load>C#</Badge>
              <Badge variant="default" client:load>SQL</Badge>
            </div>
          </div>
        </ScrollReveal>

        {/* Frameworks */}
        <ScrollReveal delay={200} client:idle>
          <div class="glass-effect rounded-xl p-8">
            <h2
              class="text-2xl font-bold mb-6 bg-gradient-to-r from-primary-400 to-purple-500 bg-clip-text text-transparent"
            >
              Frameworks & Bibliothèques
            </h2>
            <div class="flex flex-wrap gap-3">
              <Badge variant="info" client:load>React</Badge>
              <Badge variant="info" client:load>Astro</Badge>
              <Badge variant="info" client:load>Next.js</Badge>
              <Badge variant="info" client:load>Node.js</Badge>
              <Badge variant="default" client:load>Express</Badge>
              <Badge variant="default" client:load>Spring Boot</Badge>
            </div>
          </div>
        </ScrollReveal>

        {/* Cloud & DevOps */}
        <ScrollReveal delay={300} client:idle>
          <div class="glass-effect rounded-xl p-8">
            <h2
              class="text-2xl font-bold mb-6 bg-gradient-to-r from-primary-400 to-purple-500 bg-clip-text text-transparent"
            >
              Cloud & DevOps
            </h2>
            <div class="flex flex-wrap gap-3">
              <Badge variant="info" client:load>Azure</Badge>
              <Badge variant="info" client:load>AWS</Badge>
              <Badge variant="info" client:load>Vercel</Badge>
              <Badge variant="default" client:load>Docker</Badge>
              <Badge variant="default" client:load>Kubernetes</Badge>
              <Badge variant="default" client:load>GitHub Actions</Badge>
            </div>
          </div>
        </ScrollReveal>

        {/* Bases de données */}
        <ScrollReveal delay={400} client:idle>
          <div class="glass-effect rounded-xl p-8">
            <h2
              class="text-2xl font-bold mb-6 bg-gradient-to-r from-primary-400 to-purple-500 bg-clip-text text-transparent"
            >
              Bases de données
            </h2>
            <div class="flex flex-wrap gap-3">
              <Badge variant="info" client:load>PostgreSQL</Badge>
              <Badge variant="info" client:load>MongoDB</Badge>
              <Badge variant="default" client:load>Redis</Badge>
              <Badge variant="default" client:load>SQL Server</Badge>
            </div>
          </div>
        </ScrollReveal>

        {/* Méthodologies */}
        <ScrollReveal delay={500} client:idle>
          <div class="glass-effect rounded-xl p-8">
            <h2
              class="text-2xl font-bold mb-6 bg-gradient-to-r from-primary-400 to-purple-500 bg-clip-text text-transparent"
            >
              Méthodologies & Pratiques
            </h2>
            <div class="flex flex-wrap gap-3">
              <Badge variant="success" client:load>TDD</Badge>
              <Badge variant="success" client:load>Agile / Scrum</Badge>
              <Badge variant="success" client:load>CI/CD</Badge>
              <Badge variant="success" client:load>SOLID Principles</Badge>
              <Badge variant="default" client:load>Design Patterns</Badge>
              <Badge variant="default" client:load>Clean Architecture</Badge>
            </div>
          </div>
        </ScrollReveal>
      </div>
    </div>
  </ParallaxBackground>
</Layout>
