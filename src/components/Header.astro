---
/**
 * Header Component : Navigation principale responsive
 * Epic 2.3 - FE-029
 * Epic 5.1 - FE-068 (Theme Toggle Integration)
 * Epic 7.2 - FE-089 (i18n Traductions)
 * Epic 7.3 - FE-092 (Language Switcher)
 *
 * Features :
 * - Logo cliquable (retour accueil)
 * - Navigation principale (3+ liens)
 * - Theme Toggle (dark/light mode)
 * - Language Switcher (FR/EN)
 * - Accessible (aria-label, keyboard nav)
 * - Design tokens (Dark Mode First)
 * - Traductions FR/EN via dictionnaires JSON
 */

import { ThemeToggle } from './ThemeToggle';
import { LanguageSwitcher } from './LanguageSwitcher';
import frTranslations from '../i18n/fr.json';
import enTranslations from '../i18n/en.json';
import { tSync } from '../utils/i18n';

interface Props {
  lang?: 'fr' | 'en';
}

const { lang = 'fr' } = Astro.props;
const translations = lang === 'fr' ? frTranslations : enTranslations;

// Navigation links avec i18n routing
const navLinks = [
  {
    href: `/${lang}`,
    label: tSync('nav.home', lang, translations),
  },
  {
    href: `/${lang}/${lang === 'fr' ? 'a-propos' : 'about'}`,
    label: tSync('nav.about', lang, translations),
  },
  {
    href: `/${lang}/${lang === 'fr' ? 'projets' : 'projects'}`,
    label: tSync('nav.projects', lang, translations),
  },
  {
    href: `/${lang}/certifications`,
    label: tSync('nav.certifications', lang, translations),
  },
  {
    href: `/${lang}/${lang === 'fr' ? 'competences' : 'skills'}`,
    label: tSync('nav.skills', lang, translations),
  },
  {
    href: `/${lang}/contact`,
    label: tSync('nav.contact', lang, translations),
  },
];
---

<header class="border-b border-[var(--color-neutral-800)] bg-[var(--color-neutral-950)]">
  <div class="container mx-auto px-4 py-6">
    <nav aria-label="Main navigation" class="flex items-center justify-between">
      <!-- Logo (h1 pour SEO) -->
      <h1 class="text-2xl font-bold">
        <a
          href="/"
          class="text-[var(--color-primary-500)] hover:text-[var(--color-primary-400)] transition-colors"
        >
          Portfolio
        </a>
      </h1>

      <!-- Navigation Links -->
      <ul class="flex gap-6 items-center">
        {
          navLinks.map((link) => (
            <li>
              <a
                href={link.href}
                class="text-[var(--color-neutral-200)] hover:text-[var(--color-primary-500)] transition-colors font-medium"
              >
                {link.label}
              </a>
            </li>
          ))
        }

        <!-- Theme Toggle (React Island) -->
        <li>
          <ThemeToggle client:load />
        </li>

        <!-- Language Switcher (React Island) -->
        <li>
          <LanguageSwitcher client:load currentLocale={lang} />
        </li>
      </ul>
    </nav>
  </div>
</header>
